#version 330 core

in vec2 vertex_position;
in vec3 vertex_color;
out vec4 fragment_color;

layout(std140) uniform Uniforms
{
    vec4 rotation;
    vec3 translation;
    float scale;
    bool enabled;
};

void main()
{
    fragment_color = vec4(scale, scale, scale, 1.0);
    
    gl_Position = vec4(vertex_position, 0.0, 1.0);
}