#version 330 core

in vec2 vertex_position;
in vec3 vertex_color;
out vec4 fragment_color;

uniform AttributeBlock
{
    vec3 translation;
    float scale;
    vec4 rotation;
    bool enabled;
} attributes;

void main()
{
    fragment_color = vec4(0.2, 0.4, 0.6, 1.0);
    gl_Position = vec4(vertex_position * (attributes.scale + 1.0), 0.0, 1.0);
}